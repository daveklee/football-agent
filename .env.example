# Google Gemini API
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Yahoo Fantasy Football API Credentials
# Get these from: https://developer.yahoo.com/apps/
YAHOO_CONSUMER_KEY=your_yahoo_consumer_key_here
YAHOO_CONSUMER_SECRET=your_yahoo_consumer_secret_here

# Yahoo OAuth Tokens (for MCP server)
# These are obtained through the Yahoo OAuth flow
YAHOO_ACCESS_TOKEN=your_yahoo_access_token_here
YAHOO_REFRESH_TOKEN=your_yahoo_refresh_token_here
YAHOO_GUID=your_yahoo_guid_here

# Yahoo Account Credentials (for browser automation - optional)
# Only needed if using browser-based tools
YAHOO_EMAIL=your_yahoo_email@example.com
YAHOO_PASSWORD=your_yahoo_password_here

# ADK Configuration
ADK_PROJECT_ID=football-agent
ADK_REGION=us-central1
ADK_WEB_PORT=8080

# MCP Server URLs (for HTTP transport if needed)
# Note: MCP servers use stdio by default, these are only for HTTP transport
MCP_YAHOO_SERVER_URL=http://localhost:8001
MCP_BROWSER_SERVER_URL=http://localhost:8002

# Model Configuration
MODEL_NAME=gemini-2.5-pro
TEMPERATURE=0.7

# Yahoo League Configuration (optional)
# YAHOO_LEAGUE_ID=your_league_id_here
# YAHOO_GAME_ID=449
